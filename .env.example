# =============================================================================
# MSFT Agent Framework - Environment Configuration
# =============================================================================
# Copy this file to .env and update with your values:
#   cp .env.example .env
#
# IMPORTANT: Never commit .env to version control!
# =============================================================================

# =============================================================================
# AZURE OPENAI (Required)
# =============================================================================
# Your Azure OpenAI endpoint URL
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# Model deployment name (e.g., gpt-4o, gpt-4, gpt-35-turbo)
AZURE_OPENAI_DEPLOYMENT=gpt-4o

# API version (optional, defaults to latest)
AZURE_OPENAI_API_VERSION=2024-10-01-preview

# =============================================================================
# AZURE AUTHENTICATION
# =============================================================================
# For Service Principal authentication (production)
# If not set, DefaultAzureCredential will try managed identity or CLI auth
# AZURE_CLIENT_ID=your-client-id
# AZURE_TENANT_ID=your-tenant-id
# AZURE_CLIENT_SECRET=your-client-secret

# =============================================================================
# AZURE CACHE FOR REDIS (Optional - Session Management)
# =============================================================================
# Redis host (Azure Cache for Redis with AAD auth)
REDIS_HOST=your-redis.redis.cache.windows.net
REDIS_PORT=6380
REDIS_SSL=true
REDIS_TTL=3600
REDIS_PREFIX=chat:

# =============================================================================
# AZURE BLOB STORAGE (Optional - Session Persistence)
# =============================================================================
# Storage account for long-term session persistence
STORAGE_ACCOUNT_NAME=yourstorageaccount
STORAGE_CONTAINER=chat-history
STORAGE_FOLDER=threads

# =============================================================================
# ALTERNATIVE MODEL PROVIDERS (Optional)
# =============================================================================
# OpenAI Direct
# OPENAI_API_KEY=sk-...

# Anthropic Claude
# ANTHROPIC_API_KEY=sk-ant-...

# Google Gemini
# GOOGLE_API_KEY=...

# =============================================================================
# OBSERVABILITY (Optional)
# =============================================================================
# Azure Application Insights
# APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=...;IngestionEndpoint=...

# OpenTelemetry Collector (OTLP)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=ai-assistant

# Jaeger (for local development)
JAEGER_ENDPOINT=http://localhost:6831

# =============================================================================
# AZURE KEY VAULT (Optional - Secrets Management)
# =============================================================================
# Key Vault URL for secure secret retrieval
# AZURE_KEYVAULT_URL=https://your-keyvault.vault.azure.net/

# =============================================================================
# SECURITY (Optional)
# =============================================================================
# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_TOKENS_PER_MINUTE=100000

# =============================================================================
# APPLICATION (Optional)
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Environment name for observability tags
ENVIRONMENT=development

# =============================================================================
# LOCAL DEVELOPMENT WITH DOCKER COMPOSE
# =============================================================================
# Redis (local container)
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_SSL=false

# Jaeger UI (local container)
# JAEGER_UI_PORT=16686
